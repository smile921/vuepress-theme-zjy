html, body
  width: 100%
  height 100%
  font-size: $font-size-base

a
  color: #fff
  text-decoration: none
  &:hover
    text-decoration: underline

@media all and (min-width: 1600px)
  .site-layout__content-container
    max-width 1200px

@media all and (max-width: 1600px)
  .site-layout__content-container
    max-width 1000px

@media all and (max-width: 1200px)
  .site-layout__content-container
    max-width 800px
